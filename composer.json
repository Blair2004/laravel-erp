{
    "name": "juststeveking/laravel-erp",
    "description": "A simple to use opinionated ERP package to work with Laravel",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "JustSteveKing\\Laravel\\ERP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JustSteveKing\\Laravel\\ERP\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "role": "Developer",
            "name": "Steve McDougall",
            "email": "juststevemcd@gmail.com",
            "homepage": "https://www.juststeveking.uk/"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.49",
        "juststeveking/laravel-erp-contracts": "dev-main",
        "spatie/laravel-package-tools": "^1.9",
        "symfony/process": "^5.3"
    },
    "require-dev": {
        "brianium/paratest": "^6.3",
        "nunomaduro/collision": "^5.5",
        "orchestra/testbench": "^6.19",
        "phpunit/phpunit": "^9.5"
    },
    "extra": {
        "laravel": {
            "providers": [
                "JustSteveKing\\Laravel\\ERP\\ERPServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "./vendor/bin/testbench package:test --parallel --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
